	</div>
	<div id="navbar">
		<%= render :partial => "main_menu", :locals => { :pagina => @opcion } %>
	</div>	
	<div id="barra_top"></div>
</div>

<div id="contentwrapper">

	<div id="content">
		<h2><%= flash[:notice] %></h2>
		<h1><%= yield :title %></h1>
