	<% if @opcion == "administrar" %>
		<%= link_to "administrar", users_path, :id => "opt_admin", :class => "nav_btn_no {top}"  %>
	<% else %>
		<%= link_to "administrar", users_path, :id => "opt_admin", :class => "nav_btn {top}"  %>
	<% end %>
<% end %>

