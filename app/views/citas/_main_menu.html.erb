<% else  %>
	<%= link_to "ver citas", citas_path, :id => "opt_listado", :class => "nav_btn {top}" %>
<% end %>

<% if @opcion == "add" %>
	<%= link_to "+ citas", new_cita_path, :id => "opt_add", :class => "nav_btn_no {top}"  %>
